			<password-encoder ref="encoder" />
			<user-service>
				<user name="rod"
					password="4efe081594ce25ee4efd9f7067f7f678a347bccf2de201f3adf2a3eb544850b465b4e51cdc3fcdde"
					authorities="ROLE_SUPERVISOR, ROLE_USER" />
